<Window x:Class="FileTransfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileTransfer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Iniciar Transferencia" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="50" Click="StartTransfer_Click"/>
        <ListBox x:Name="LogBox" VerticalAlignment="Bottom" Height="300" Margin="10"/>
        <StackPanel x:Name="ProgressPanel" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>
    </Grid>

</Window>
